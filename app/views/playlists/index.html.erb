<div class="section-playlists">
  <div class="tab__content">
    <section class="switchable ">
      <div class="container">
        <div class="row">
         <h2>Ulis de Lastvader</h2>
         <span h3><%= @playlists.count %> Playlists à découvrir </span>
         <span h3>- <%= Sound.all.count %> Émissions à écouter </span>
         <div class="col switchable__text">
          <ul class="accordion accordion-1" style="min-height: 0px;">

            <% @playlists.each do |play| %>


            <li>
              <div class="accordion__title">
                <span class="h4"><%= play.title %> </span> - <span class="h5"><%=play.playlist_sound.count %> Émissions</span>
              </div>
              <% play.playlist_sound.each do |play_list| %>
              <div class="accordion__content">
                <div class="section-sounds">
                  <div class="section-sound">
                    <div class="title-sound">
                      <h5><%= Sound.find(play_list.sound_id).title %> - <%= Sound.find(play_list.sound_id).author %> - Émission <%=play_list.order %></h5>
                    </div>
                    <div class="img-sound">
                      <img src="<%= Sound.find(play_list.sound_id).poster %>"></img>
                    </div>
                    <div class="play-sound">
                      <%= image_tag('play_btn.svg', class: 'play-js play--btn', data: {source: Sound.find(play_list.sound_id).source })  %>
                    </div>
                    <div class="like-my-sound">
                        <%= render 'like', sound: Sound.find(play_list.sound_id) %> 
                        <div class="like-count-js"><%= Sound.find(play_list.sound_id).like %></div>
                      </div>
                  </div>
                </div>

              </div>
              <% end %>
            </li>
            <% end %>

          </ul>

        </div>

      </div>

    </div>

  </section>
</div>
</div>
<%= render 'shared/player' %>